<div class="message" data-session="<%= session[:user_id] %>">
  <% user = User.find_by(id: message.to_id) %>
  <p class="<%= message.id %>" id="message_from">
    <%= user.name %>
  </p>
  <p class="<%= message.id %>" id="message_content">
    <%= message.content %>
  </p>
  <p class="<%= message.id %>" id="message_created_at">
    <%= message.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
  </p>

  <script type="text/javascript">
    var to_id = <%= message.to_id %>;
    var current_user_id = $('.message').data('session');
    if(to_id == current_user_id){
      $('p.' + <%= message.id %>).css('text-align', 'right');
    }else{
      $('p.' + <%= message.id %>).css('text-align', 'left');
    }
  </script>
</div>
