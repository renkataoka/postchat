<%= render 'index' %>
<body class="container">
  <h1 class="col-md-12">チャット一覧</h1>
  <p><%= notice %></p>


  <% @chats.each do |chat| %>
    <ul class="row">
      <li class="col-xs-12 col-md-1">内容</li>
      <li class="col-xs-12 col-md-5 content"><%= chat.content %></li>

      <li class="col-xs-12 col-md-2 edit"><%= link_to '詳細を確認する',chat_path(chat.id) %></li>
      <li class="col-xs-12 col-md-2 edit"><%= link_to 'チャットを編集する',edit_chat_path(chat.id) %></li>
      <li class="col-xs-12 col-md-2 edit"><%= link_to 'チャットを削除する',chat_path(chat.id), data: {confirm: '本当に削除していいですか？'}, method: :delete %></li>
    </ul>
  <% end %>


  <div class="post">
    <%= link_to '新しくチャットを投稿する', new_chat_path %>
  </div>
</body>
